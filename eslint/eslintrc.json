{
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "require-jsdoc": "off",
    "indent": ["error", 4, {
      "SwitchCase": 1
    }],
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "no-mixed-operators": "off",
    "quote-props": "off",
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "max-len": ["error", 120]
  },
  "globals": {
    "Polymer": true
  }
}
