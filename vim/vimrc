" -----------------------------------------------------
" Diffing
" -----------------------------------------------------

" recursive multiple file diff
Plug 'vim-scripts/DirDiff.vim'

set diffexpr=MyDiff()
function MyDiff()
    let opt = ""
    if &diffopt =~ "icase"
        let opt = opt . "-i "
    endif
    if &diffopt =~ "iwhite"
        let opt = opt . "-b "
    endif
    silent execute "!diff -d -a --binary " . opt . v:fname_in . " " . v:fname_new . " > " . v:fname_out
endfunction

if &diff
    function! CheckDiff()
        if &modified
            diffupdate
        endif
    endfunction

    autocmd CursorMoved * call CheckDiff()
endif

